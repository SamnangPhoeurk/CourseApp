<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splah_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.thoeunchhaykry.shortcauseapp.SplahScreenActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/logoflat"
            android:id="@+id/imageView30"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="Welcome to Short Cause App"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            tools:ignore="HardcodedText" />

        <TextView
            android:text="this app can help you to find short cause you want to learn it easy farter save your time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorAccent"
            tools:ignore="HardcodedText" />

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            android:layout_marginTop="25dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Copy right @ thoeun chhaykry 2017-2018"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</RelativeLayout>
