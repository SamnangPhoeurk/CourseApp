<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thoeunchhaykry.shortcauseapp.FragmentCauseType.NetwordFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/first_design"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            tools:ignore="RtlHardcoded,UselessLeaf"
            android:background="@color/law">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:srcCompat="@drawable/indesign"
                android:id="@+id/imageView16"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="Indesign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            tools:ignore="RtlHardcoded,UselessLeaf"
            android:background="@color/sp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:srcCompat="@drawable/photoshop"
                android:id="@+id/imageView17"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="PhotoShop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/second_design"
        android:layout_below="@+id/first_design"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            tools:ignore="RtlHardcoded,UselessLeaf"
            android:background="@color/law">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                app:srcCompat="@drawable/illustrator"
                android:id="@+id/imageView18"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="Illustrator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            tools:ignore="RtlHardcoded,UselessLeaf"
            android:background="@color/sp"></LinearLayout>
    </LinearLayout>
</RelativeLayout>
